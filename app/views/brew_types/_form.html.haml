= form_for @brew_type do |f|
  -if @brew_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@brew_type.errors.count, "error")} prohibited this brew_type from being saved:"
      %ul
        - @brew_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
